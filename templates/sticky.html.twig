        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }
        nav {
            position: sticky;
            top: 0;
            z-index: 100;
            background-color: lightblue;
            padding: 1em 0;
        }
        ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: space-between;
        }
        a {
            color: black;
            text-decoration: none;
            padding: 1em;
        }
        .content {
            height: 200vh;
            padding: 2em;
        }
    </style>
</head>
